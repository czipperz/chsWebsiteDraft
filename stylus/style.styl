@import 'stylus/base'

body
    height 100%
    width 100%
    background-color body-background
    color #CCCFE0
    font-family Arial, Helvetica, sans-serif
    font-size 14px
    margin-left 0px
h3
    font-size 19px
.ld
	font-weight bold
	color #5EA3D7
    a
		&:link, &:visited
			text-decoration underline
		&:hover, &:active
			color plink-hover-color
#content .breaker
    height 8px
    background-color body-background
    width 100%
#page
    margin-right 15px
    margin-left 15px
    background-color #FFF



#top
    background-color header-background



#header
    margin-top -9px
    //background-color #093B62
    text-decoration none
    padding 1px 0px
    width 100%
    h1
		> a
			padding-left 24px
			font-size 40px
			text-decoration none
			&:link, &:visited
    	       	color header-default-color
    	   	&:hover, &:active
				color header-hover-color


#content
    color header-background
    padding 0px
    width 100%
#info
    margin-top -5px
    padding-left 5px
    padding-bottom 10px
#info h2
    contentheading()
    margin-top 12px
#content hr
    width 100%
#announcements
    padding-left 5px
    width 100%
    padding-top 5px
    h2
		contentheading()
		margin-top -5px
